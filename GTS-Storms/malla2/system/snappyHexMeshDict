// Settings for the castellatedMesh generation.
castellatedMeshControls
{
    // Refinement parameters
    maxLoadUnbalance   0.10;
    maxLocalCells    500000;
    maxGlobalCells 50000000;
    minRefinementCells   10;
    nCellsBetweenLevels   4;

    // Explicit feature edge refinement
    features
    (
        {
            file "GTS-Storms-v7.eMesh"; //!!
            //level 6;
	    levels ((0.012 6)); // 10 celdas de nivel 6 en torno al borde
        }
    );

    // Surface based refinement
    refinementSurfaces
    {
        gtsModel
        {
            level (5 6);
            patchInfo
            {
                type wall;
                inGroups (gts_surface);
            }
        }
	floor
        {
            level (0 0);
            patchInfo
            {
                type wall;
                inGroups (floor);
            }
        }
	top
        {
            level (0 0);
            patchInfo
            {
                type wall;
                inGroups (top);
            }
        }
	left
        {
            level (0 0);
            patchInfo
            {
                type wall;
                inGroups (left);
            }
        }
	right
        {
            level (0 0);
            patchInfo
            {
                type wall;
                inGroups (right);
            }
        }
	inlet
        {
            level (0 0);

            patchInfo
            {
                type patch;
                inGroups (inlet);
            }
        }
	outlet
        {
            level (0 0);

            patchInfo
            {
                type patch;
                inGroups (outlet);
            }
        }

    }

    resolveFeatureAngle 30;


    // Region-wise refinement
    refinementRegions
    {
        refinementBox1
        {
            mode inside;
            levels ((1E15 1));
        }
        refinementBox2
        {
            mode inside;
            levels ((1E15 2));
        }
        refinementBox3
        {
            mode inside;
            levels ((1E15 3));
        }
	gtsModel
	{
	    mode distance;
	    levels
	    (
		(0.015 5)
	    );
	}
	/*
	floor
	{
	   mode        distance;
	   levels
	   (
		(0.05 4)
	   );
	}
        refinementBoxFloor3
        {
            mode inside;
            levels ((1E15 3));
        }
        refinementBoxFloor2
        {
            mode inside;
            levels ((1E15 2));
        }
        refinementBoxFloor1
        {
            mode inside;
            levels ((1E15 1));
        }
	top
	{
	   mode        distance;
	   levels
	   (
		(0.05 4)
	   );
	}
